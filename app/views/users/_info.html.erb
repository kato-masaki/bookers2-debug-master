<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th><%= link_to following_user_path(user.id) do %> <%= user.follower.count %> <% end %></th>
  </tr>
  <tr>
	  <th>followers</th>
	  <th><%= link_to followers_user_path(user.id) do %> <%= user.followed.count %><% end %></th>
  </tr>
</table>

<% if current_user != user %>
  <% if current_user.following?(user) %>
    <td><%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn btn-info" %></td>
  <% else %>
    <td><%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success" %></td>
  <% end %>
<% else %>
<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>
<% end %>
